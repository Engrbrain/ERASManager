                        <div id="bar-chart" style="width:100%; height:400px;"></div>
                    </div>
                </div>
            </div>
            <!-- column -->
            <!-- column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Total GasLift vs WFBProcess</h4>
                        <div id="main" style="width:100%; height:400px;"></div>
                    </div>
                </div>
            </div>
            <!-- column -->
            <!-- column -->
            <div class="col-lg-6">
                <div class="card" style="display:none;">
                    <div class="card-body">
                        <h4 class="card-title">Monthly Salary</h4>
                        <div id="pie-chart" style="width:100%; height:400px;"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body" style="display:none;">
                        <h4 class="card-title">Infographic Chart</h4>
                        <div id="donuteinfographic" style="width:100%; height:400px;"></div>
                    </div>
                </div>
            </div>
            <!-- column -->
            <!-- column -->
            <div class="col-lg-12" style="display:none;">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic Bar Chart</h4>
                        <div id="basic-bar" style="width:100%; height:400px;"></div>
