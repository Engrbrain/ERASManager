@model ERASManager.Models.RevisedBackAllocation.RBackAllocationMaster

@{
    ViewBag.Title = "Revised - Back Allocation Algorithm";
}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">BackAllocation Master Data</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Back Allocation Master Data</a></li>
                <li class="breadcrumb-item">Add BackAllocation Master Data</li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </div>
        <div class="">
            <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-outline-info">
                    <div class="card-header">
                        <h4 class="m-b-0 text-white">Revised BackAllocation Algorithm</h4>
                    </div>
                    <div class="card-body">

                       @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                        <div class="form-body">
                            <h3 class="card-title">Add Daily Report</h3>
                            <hr>
                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Report Date</label>
                                        @Html.EditorFor(model => model.IndicatorDate, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.IndicatorDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group has-danger">
                                        <label class="control-label">Well</label>
                                        @Html.EditorFor(model => model.Well, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Well, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>

                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">BSW</label>
                                        @Html.EditorFor(model => model.BSW, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.BSW, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group has-danger">
                                        <label class="control-label">BPLD</label>
                                        @Html.EditorFor(model => model.BLPD, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.BLPD, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>

                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">GOR</label>
                                        @Html.EditorFor(model => model.GOR, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.GOR, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <div class="form-group has-danger">
                                        <label class="control-label">WFB Strinkage Factor</label>
                                        @Html.EditorFor(model => model.WFBStrinkageFactor, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.WFBStrinkageFactor, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--/span-->
                            </div>

                            <div class="row p-t-20">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">CFB Strinkage Factor</label>
                                        @Html.EditorFor(model => model.CFBStrinkageFactor, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CFBStrinkageFactor, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <!--/span-->
                                
                                <!--/span-->
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-success"> <i class="fa fa-plus"></i> Add Record</button>
                                <button type="button" class="btn btn-inverse"><i class="fa fa-times"></i>Cancel</button>
                                <a href="@Url.Action("Index", "RBackAllocationMasters")" class="btn btn-info"><i class="fa fa-backward"></i> &nbsp;Back To List&nbsp; </a>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
            <!-- Row -->

        </div>
    </div>
