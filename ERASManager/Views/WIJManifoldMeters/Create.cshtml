@model ERASManager.Models.EBOKDailyReport.WIJManifoldMeter

@{
    ViewBag.Title = "WIJ Manifold Meters - Create";
}

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-themecolor">WIJ Manifold Meters</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">WIJ Manifold Meters</a></li>
                <li class="breadcrumb-item">Add Daily Report</li>
                <li class="breadcrumb-item active">Create</li>
            </ol>
        </div>
        <div class="">
            <button class="right-side-toggle waves-effect waves-light btn-inverse btn btn-circle btn-sm pull-right m-l-10"><i class="ti-settings text-white"></i></button>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-outline-info">
                    <div class="card-header">
                        <h4 class="m-b-0 text-white">WIJ Manifold Meters</h4>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-body">
                                <h3 class="card-title">Add Daily Report</h3>
                                <hr>
                                <div class="row p-t-20">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Meter Name</label>
                                            @Html.EditorFor(model => model.MeterName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.MeterName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group has-danger">
                                            <label class="control-label">Current 8 Hours</label>
                                            @Html.EditorFor(model => model.CurrentEightHours, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.CurrentEightHours, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>

                                <div class="row p-t-20">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Previous 8 Hours</label>
                                            @Html.EditorFor(model => model.PreviousEightHours, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.PreviousEightHours, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">24 Hours</label>
                                            @Html.EditorFor(model => model.TwentyFourHours, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TwentyFourHours, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>

                                <div class="row p-t-20">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">Report Date</label>
                                            @Html.EditorFor(model => model.ReportDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                                            @Html.ValidationMessageFor(model => model.ReportDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <!--/span-->
                                </div>

                                <div class="form-actions">
                                    <button type="submit" class="btn btn-success"> <i class="fa fa-plus"></i> Add Record</button>
                                    <button type="button" class="btn btn-inverse"><i class="fa fa-times"></i>Cancel</button>
                                    <a href="@Url.Action("Index", "WIJManifoldMeters")" class="btn btn-info"><i class="fa fa-backward"></i> &nbsp;Back To List&nbsp; </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- Row -->

        </div>
    </div>
